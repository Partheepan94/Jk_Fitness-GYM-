
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Compose Mail</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">
                    <div class="custom-control custom-checkbox col-md-2">
                        <input class="custom-control-input" type="checkbox" id="Manual" value="true">
                        <label for="Manual" class="custom-control-label">Manual</label>
                    </div>
                    <span id="MailCount" style="color: red; display:none"></span>
                </div>

                <br>
                <div class="row" id="FilterOpt" style="display:none">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Branch</label>
                            <select class="form-control col-md-12 col-sm-12" id="Branch"></select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Status</label>
                            <select class="form-control col-md-12 col-sm-12" id="Status"></select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Gender</label>
                            <select class="form-control col-md-12 col-sm-12" id="Gender"></select>
                        </div>
                    </div>

                </div>
                <div class="form-group" id="ToOpt" style="display:flex">
                    <input class="form-control" id="To" placeholder="To:">
                </div>
                <div class="form-group">
                    <input class="form-control" id="Subject" placeholder="Subject:">
                </div>
                <div class="form-group">
                    <textarea id="compose-textarea" class="form-control" style="height: 300px">                 
                    </textarea>
                </div>
                <div class="form-group">
                    @*<div class="btn btn-default btn-file">
                            <i class="fas fa-paperclip"></i> Attachment
                            <input type="file" id="attachment" name="attachment">
                        </div>*@
                    <div class="custom-file">
                        <input type="file" id="attachment" class="form-control custom-file-input" />
                        <label class="custom-file-label" id="fileLabelName">Choose Attachment File....</label>
                    </div>
                    @*<p class="help-block">Max. 32MB</p>*@
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <div class="float-right">
                    @* <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Draft</button>*@
                    <button type="submit" id="save" class="btn btn-primary"><i class="far fa-envelope"></i> Send</button>
                </div>
                <button type="reset" class="btn btn-default" id="Discard"><i class="fas fa-times"></i> Discard</button>
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <div id="waitform" style="display:none;position:fixed;top:50%;left:50%;padding:2px;"><img src="~/dist/img/Loading.gif" width="70" height="70" /><br></div>
    <!-- /.col -->
    <input type="hidden" id="SentMailPath" value="@Url.Action("MailSending","Mailbox")" />
    <input type="hidden" id="GetBranchDetails" value="@Url.Action("GetBranchDetails", "Membership")" />
    <input type="hidden" id="GetMemberDetails" value="@Url.Action("GetMemberDetails", "Mailbox")" />
</div>


<script src="~/js/page.mail.js"></script>
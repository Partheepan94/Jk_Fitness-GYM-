
@{
    ViewData["Title"] = "PersonalTraining";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="form-group">
                    <h3 class="card-title">Personal Training Payments</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group row ">
                    <label class="control-label col-md-2 col-sm-2">Membership No</label>
                    <div class="col-md-2 col-sm-2">
                        <input type="text" class="form-control" id="MebershipNo">
                    </div>
                    <div class="col-md-2 col-sm-2">
                        <button type="button" id="btnSearch" class="btn btn-success form-control"><i class="fa fa-search"></i> Find</button>
                    </div>
                    <div class="col-md-2 col-sm-2">
                        <button type="button" id="btnClear" class="btn btn-warning form-control">Clear</button>
                    </div>
                </div>
                <div class="form-group row ">
                    <label class="control-label col-md-2 col-sm-2 ">Branch</label>
                    <div class="col-md-3 col-sm-3">
                        <select class="form-control col-md-12 col-sm-12" id="Branch" disabled></select>
                    </div>
                </div>
                <div class="form-group row ">
                    <label class="control-label col-md-2 col-sm-2">Staff Id</label>
                    <div class="col-md-3 col-sm-3">
                        <select class="form-control col-md-12 col-sm-12" id="StaffId"></select>
                    </div>
                </div>
                <div class="form-group row ">
                    <label class="control-label col-md-2 col-sm-2 ">Staff Name</label>
                    <div class="col-md-3 col-sm-3">
                        <input type="text" id="name" class="form-control" disabled>
                    </div>
                </div>
                <div class="form-group row ">
                    <label class="control-label col-md-2 col-sm-2 ">Training Amount</label>
                    <div class="col-md-3 col-sm-3">
                        <input type="text" id="Tamount" class="form-control">
                    </div>
                </div>
                <div class="form-group row ">
                    <label class="control-label col-md-2 col-sm-2 ">Payment Date</label>
                    <div class="input-group date col-md-3 col-sm-3" id="date" data-target-input="nearest">
                        <input type="text" id="PaymentDate" class="form-control datetimepicker-input" data-target="#date" data-toggle="datetimepicker" />
                        <div class="input-group-append" data-target="#date" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-body">
                <div class="col-md-1 col-sm-1">
                    <button type="button" id="btnSave" class="btn btn-success form-control"><i class="fa fa-save"></i> Save</button>
                </div>
            </div>
            <div id="wait" class="loading-gif"><img src="~/dist/img/Loading.gif" width="70" height="70" /><br></div>
        </div>
    </div>
    <input type="hidden" id="GetDetailsforPersonalTraining" value="@Url.Action("GetDetailsforPersonalTraining", "PaymentsExpenses")" />
    <input type="hidden" id="GetBranchDetails" value="@Url.Action("GetBranchDetails", "Employee")" />
    <input type="hidden" id="SavePersonalTraining" value="@Url.Action("SavePersonalTraining", "PaymentsExpenses")" />
</div>
<script src="~/js/page.personalTraining.js"></script>